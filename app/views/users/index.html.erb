<div class='container px-5 px-sm-0'>
  <%= render 'books/error', book: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'books/info', book: @book, user: @user %>
    </div>

    <div class='col-md-8 offset-md-1'>
  		<table class='table'>
  		  <h2>Users</h2>
        <thead>
          <th>image</th>
          <th>name</th>
          <th></th>
  	    </thead>
  	  	<tbody>
  	  	  <% @users.each do |user| %>
	  	  	<tr>
	  	  	  <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', size:'40x40', fallback: "no_image.jpg" %></td>
	  	  	  <td><%= user.name %></td>
	  	  	  <td><%= link_to "Show", "/users/#{user.id}" %></td>
	  	  	</tr>
  	  	  <% end %>
  	  	</tbody>
      </table>
    </div>
  </div>
</div>