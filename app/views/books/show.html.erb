<div class='container px-5 px-sm-0'>
  <%= render 'books/error', book: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'books/info', book: @newbook, user: @user %>
    </div>

    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', size:'100x100', fallback: "no_image.jpg" %>
          <br><%= link_to @user.name, user_path(@user) %></td>
          <td><%= link_to @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>



